---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

const { token } = Astro.params;

if (!token) {
  return Astro.redirect('/');
}
---

<Layout title="Activate Account - plue">
  <Header currentPath="/activate" />
  <div class="container">
    <div class="auth-container">
      <h1>Account Activation</h1>
      <p>We're activating your account...</p>

      <div id="loading" class="loading-message">
        <div class="spinner"></div>
        <span>Activating account...</span>
      </div>

      <div id="error" class="error-message" style="display: none;"></div>
      <div id="success" class="success-message" style="display: none;"></div>

      <div class="auth-links" style="display: none;" id="links">
        <a href="/login" class="btn btn-primary">Continue to Sign In</a>
        <a href="/register" style="margin-top: 1rem; display: block;">Need to register again?</a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .auth-container {
    max-width: 400px;
    margin: 4rem auto;
    padding: 2rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    background: var(--gray-950);
    text-align: center;
  }

  .loading-message {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    color: var(--gray-300);
  }

  .spinner {
    width: 20px;
    height: 20px;
    border: 2px solid var(--gray-700);
    border-top: 2px solid var(--primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .error-message {
    padding: 0.75rem;
    margin: 1rem 0;
    background: var(--error-dim);
    border: 1px solid var(--error);
    border-radius: var(--radius);
    color: var(--error);
    text-align: left;
  }

  .success-message {
    padding: 0.75rem;
    margin: 1rem 0;
    background: var(--success-dim);
    border: 1px solid var(--success);
    border-radius: var(--radius);
    color: var(--success);
    text-align: left;
  }

  .auth-links {
    margin-top: 2rem;
  }

  .auth-links a {
    color: var(--gray-300);
    text-decoration: underline;
  }

  .auth-links a:hover {
    color: var(--fg);
  }

  .btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--fg);
    background: var(--gray-900);
    transition: all 0.2s;
  }

  .btn.btn-primary {
    background: var(--primary);
    color: var(--primary-fg);
    border-color: var(--primary);
  }

  .btn:hover {
    background: var(--gray-800);
  }

  .btn.btn-primary:hover {
    background: var(--primary-hover);
  }
</style>

<script define:vars={{ token }}>
  import { activateAccount } from '../../lib/client-auth';

  const loadingDiv = document.getElementById('loading');
  const errorDiv = document.getElementById('error');
  const successDiv = document.getElementById('success');
  const linksDiv = document.getElementById('links');

  async function activateAccountWithToken() {
    try {
      const result = await activateAccount(token);
      
      // Hide loading
      loadingDiv.style.display = 'none';
      
      // Show success
      successDiv.textContent = result.message;
      successDiv.style.display = 'block';
      
      // Show navigation links
      linksDiv.style.display = 'block';
      
    } catch (error) {
      // Hide loading
      loadingDiv.style.display = 'none';
      
      // Show error
      let errorMessage = 'Activation failed';
      if (error instanceof Error) {
        errorMessage = error.message;
      }
      
      errorDiv.textContent = errorMessage;
      errorDiv.style.display = 'block';
      
      // Show navigation links
      linksDiv.style.display = 'block';
    }
  }

  // Start activation when page loads
  activateAccountWithToken();
</script>