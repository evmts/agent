</style>

<script define:vars={{ sessionId: id, session }}>
  const chatMessages = document.getElementById('chat-messages');
  const chatForm = document.getElementById('chat-form');
  const chatInput = document.getElementById('chat-input');
  const changesList = document.getElementById('changes-list');
  const sendButton = chatForm?.querySelector('button[type="submit"]');

  // Track current streaming state
  let currentAssistantMessage = null;
  let isStreaming = false;
  let currentAbortController = null;

  // Remove welcome message
  function removeWelcome() {
    const welcome = chatMessages?.querySelector('.welcome-message');
    if (welcome) welcome.remove();
  }

  // Add a user message to the chat
  function addUserMessage(content) {
    if (!chatMessages) return;
    removeWelcome();

    const div = document.createElement('div');
    div.className = 'message user';
    div.innerHTML = `
      <div class="message-role">user</div>
      <div class="message-content">${escapeHtml(content)}</div>
    `;
    chatMessages.appendChild(div);
    chatMessages.scrollTop = chatMessages.scrollHeight;
  }

  // Create a new assistant message container for streaming
  function createAssistantMessage() {
    if (!chatMessages) return null;
    removeWelcome();

    const div = document.createElement('div');
    div.className = 'message assistant streaming';
    div.innerHTML = `
      <div class="message-role">assistant</div>
      <div class="message-content"></div>
      <div class="message-tools"></div>
    `;
    chatMessages.appendChild(div);
    chatMessages.scrollTop = chatMessages.scrollHeight;
    return div;
  }

  // Append text to the current assistant message
  function appendToAssistantMessage(text) {
    if (!currentAssistantMessage) return;
    const content = currentAssistantMessage.querySelector('.message-content');
    if (content) {
      content.textContent += text;
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }
  }

  // Add a tool call to the current assistant message
  function addToolCall(toolName, toolId, args) {
    if (!currentAssistantMessage) return;
    const tools = currentAssistantMessage.querySelector('.message-tools');
    if (tools) {
      const toolDiv = document.createElement('div');
      toolDiv.className = 'tool-call';
      toolDiv.id = `tool-${toolId}`;
      toolDiv.innerHTML = `
        <div class="tool-header">
          <span class="tool-name">${escapeHtml(toolName)}</span>
          <span class="tool-status">running...</span>
        </div>
        <div class="tool-args">${escapeHtml(JSON.stringify(args, null, 2))}</div>
      `;
      tools.appendChild(toolDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }
  }

  // Update tool result
  function updateToolResult(toolId, output) {
    const toolDiv = document.getElementById(`tool-${toolId}`);
    if (toolDiv) {
      const status = toolDiv.querySelector('.tool-status');
      if (status) {
        status.textContent = 'done';
        status.classList.add('complete');
      }
      // Add truncated output preview
      const outputDiv = document.createElement('div');
      outputDiv.className = 'tool-output';
      const truncatedOutput = output.length > 500 ? output.substring(0, 500) + '...' : output;
      outputDiv.textContent = truncatedOutput;
      toolDiv.appendChild(outputDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }
  }

  // Mark streaming complete
  function finishAssistantMessage() {
    if (currentAssistantMessage) {
      currentAssistantMessage.classList.remove('streaming');
    }
    currentAssistantMessage = null;
    setStreamingState(false);
  }

  // Show error in current message
  function showError(error) {
    if (currentAssistantMessage) {
      const content = currentAssistantMessage.querySelector('.message-content');
      if (content) {
        content.innerHTML += `<div class="error-text">Error: ${escapeHtml(error)}</div>`;
      }
    }
    finishAssistantMessage();
  }

  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // Set streaming UI state
  function setStreamingState(streaming) {
    isStreaming = streaming;
    if (sendButton) {
      sendButton.textContent = streaming ? 'Streaming...' : 'Send';
      sendButton.disabled = streaming || session.archived;
    }
    if (chatInput) {
      chatInput.disabled = streaming || session.archived;
    }
  }

  // Run agent with SSE streaming
  async function runAgent(message) {
    setStreamingState(true);
    currentAssistantMessage = createAssistantMessage();
    currentAbortController = new AbortController();

    try {
      const response = await fetch(`/api/sessions/${sessionId}/run`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          message: message,
          agent_name: 'build',
        }),
        signal: currentAbortController.signal,
      });

      if (!response.ok) {
        const error = await response.text();
        showError(`HTTP ${response.status}: ${error}`);
        return;
      }

      // Handle SSE streaming
      const reader = response.body.getReader();
      const decoder = new TextDecoder();
      let buffer = '';

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;

        buffer += decoder.decode(value, { stream: true });

        // Process complete SSE events
        const lines = buffer.split('\n');
        buffer = lines.pop() || ''; // Keep incomplete line in buffer

        for (const line of lines) {
          if (line.startsWith('data: ')) {
            const data = line.slice(6);
            if (data.trim()) {
              try {
                const event = JSON.parse(data);
                handleSSEEvent(event);
              } catch (e) {
                console.error('Failed to parse SSE event:', e, data);
              }
            }
          }
        }
      }

      // Handle any remaining buffer
      if (buffer.startsWith('data: ')) {
        const data = buffer.slice(6);
        if (data.trim()) {
          try {
            const event = JSON.parse(data);
            handleSSEEvent(event);
          } catch (e) {
            console.error('Failed to parse final SSE event:', e, data);
          }
        }
      }

    } catch (error) {
      showError(error.message || 'Failed to connect to agent');
    }
  }

  // Handle SSE events from Zig server
  function handleSSEEvent(event) {
    switch (event.type) {
      case 'text':
        if (event.data) {
          appendToAssistantMessage(event.data);
        }
        break;

      case 'tool_call':
        addToolCall(event.toolName || 'unknown', event.toolId || 'unknown', event.args || {});
        break;

      case 'tool_result':
        updateToolResult(event.toolId || 'unknown', event.toolOutput || '');
        break;

      case 'error':
        showError(event.error || 'Unknown error');
        break;

      case 'done':
        finishAssistantMessage();
        // Refresh changes list after agent completes
        loadChanges();
        break;

      default:
        console.log('Unknown SSE event type:', event.type);
    }
  }

  // Load existing messages from database
  async function loadMessages() {
    try {
      const response = await fetch(`/api/sessions/${sessionId}/messages`);
      if (!response.ok) {
        console.error('Failed to load messages:', response.status);
        return;
      }

      const data = await response.json();
      if (!data.messages || data.messages.length === 0) {
        return; // Keep welcome message
      }

      removeWelcome();

      // Group messages and load their parts
      for (const message of data.messages) {
        const partsResponse = await fetch(`/api/sessions/${sessionId}/messages/${message.id}/parts`);
        let parts = [];
        if (partsResponse.ok) {
          const partsData = await partsResponse.json();
          parts = partsData.parts || [];
        }

        // Render message with parts
        renderMessage(message, parts);
      }

      chatMessages.scrollTop = chatMessages.scrollHeight;
    } catch (error) {
      console.error('Failed to load messages:', error);
    }
  }

  // Render a message with its parts
  function renderMessage(message, parts) {
    if (!chatMessages) return;

    const div = document.createElement('div');
    div.className = `message ${message.role}`;
    div.dataset.messageId = message.id;

    let contentHtml = '';
    let toolsHtml = '';

    // Sort parts by sort order
    parts.sort((a, b) => a.sortOrder - b.sortOrder);

    for (const part of parts) {
      if (part.type === 'text' && part.text) {
        contentHtml += escapeHtml(part.text);
      } else if (part.type === 'tool' && part.toolName) {
        const state = part.toolState ? JSON.parse(part.toolState) : {};
        const statusClass = state.status === 'complete' ? 'complete' : '';
        toolsHtml += `
          <div class="tool-call">
            <div class="tool-header">
              <span class="tool-name">${escapeHtml(part.toolName)}</span>
              <span class="tool-status ${statusClass}">${state.status || 'unknown'}</span>
            </div>
            ${state.args ? `<div class="tool-args">${escapeHtml(JSON.stringify(state.args, null, 2))}</div>` : ''}
            ${state.result ? `<div class="tool-output">${escapeHtml(state.result.substring(0, 500))}${state.result.length > 500 ? '...' : ''}</div>` : ''}
          </div>
        `;
      }
    }

    div.innerHTML = `
      <div class="message-role">${message.role}</div>
      <div class="message-content">${contentHtml}</div>
      ${toolsHtml ? `<div class="message-tools">${toolsHtml}</div>` : ''}
    `;

    chatMessages.appendChild(div);
  }

  // Handle chat submission
  chatForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (isStreaming) return;

    const input = chatInput;
    if (!input || !input.value.trim()) return;

    const message = input.value.trim();
    input.value = '';

    addUserMessage(message);
    await runAgent(message);
  });

  // Load changes
  async function loadChanges() {
    if (!changesList) return;

    try {
      const response = await fetch(`/api/sessions/${sessionId}/changes`);
      if (response.ok) {
        const data = await response.json();
        if (data.changes && data.changes.length > 0) {
          changesList.innerHTML = data.changes.map(change => `
            <div class="change-item" data-change-id="${change.changeId}">
              <div class="change-id">${change.changeId.substring(0, 8)}</div>
              <div class="change-desc">${change.description || '(no description)'}</div>
            </div>
          `).join('');
        } else {
          changesList.innerHTML = '<p class="loading">No changes yet</p>';
        }
      } else {
        changesList.innerHTML = '<p class="loading">Failed to load changes</p>';
      }
    } catch (e) {
      changesList.innerHTML = '<p class="loading">Failed to load changes</p>';
    }
  }

  loadChanges();
  loadMessages();

  // Action handlers
  document.querySelectorAll('[data-action]').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const action = btn.getAttribute('data-action');

      switch (action) {
        case 'edit-title':
          const modal = document.getElementById('rename-modal');
          const titleInput = document.getElementById('new-title');
          if (modal && titleInput) {
            titleInput.value = session.title || '';
            modal.style.display = 'block';
          }
          break;

        case 'archive':
        case 'unarchive':
          const archived = action === 'archive';
          const archiveRes = await fetch(`/api/sessions/${sessionId}`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ archived }),
          });
          if (archiveRes.ok) {
            window.location.reload();
          } else {
            window.toast?.error(`Failed to ${action} session`);
          }
          break;

        case 'delete':
          if (!confirm('Delete this session? This cannot be undone.')) return;
          const deleteRes = await fetch(`/api/sessions/${sessionId}`, {
            method: 'DELETE',
          });
          if (deleteRes.ok) {
            window.location.href = '/sessions';
          } else {
            window.toast?.error('Failed to delete session');
          }
          break;

        case 'fork':
          const forkRes = await fetch(`/api/sessions/${sessionId}/fork`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({}),
          });
          if (forkRes.ok) {
            const data = await forkRes.json();
            window.location.href = `/sessions/${data.session.id}`;
          } else {
            window.toast?.error('Failed to fork session');
          }
          break;

        case 'undo':
          const undoRes = await fetch(`/api/sessions/${sessionId}/undo`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ count: 1 }),
          });
          if (undoRes.ok) {
            const data = await undoRes.json();
            window.toast?.success(`Undone ${data.turnsUndone} turn(s)`);
            window.location.reload();
          } else {
            window.toast?.error('Failed to undo');
          }
          break;

        case 'abort':
          // Cancel frontend streaming first
          if (currentAbortController) {
            currentAbortController.abort();
            currentAbortController = null;
          }
          finishAssistantMessage();

          // Then notify the server to abort via REST endpoint
          const abortRes = await fetch(`/api/sessions/${sessionId}/abort`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
          });
          if (abortRes.ok) {
            window.toast?.success('Task aborted');
          } else {
            const errorText = await abortRes.text();
            console.error('Abort failed:', errorText);
            window.toast?.error('Failed to abort task');
          }
          break;
      }
    });
  });

  // Close modal
  document.querySelectorAll('[data-close-modal]').forEach(el => {
    el.addEventListener('click', () => {
      document.querySelectorAll('.modal').forEach(m => m.style.display = 'none');
    });
  });

  // Rename form
  document.getElementById('rename-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);
    const newTitle = formData.get('title');

    const res = await fetch(`/api/sessions/${sessionId}`, {
      method: 'PATCH',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ title: newTitle }),
    });

    if (res.ok) {
      document.getElementById('session-title').textContent = newTitle;
      document.getElementById('rename-modal').style.display = 'none';
      window.toast?.success('Session renamed');
    } else {
      window.toast?.error('Failed to rename session');
    }
  });
</script>
