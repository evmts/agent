---
/**
 * AI Session Detail Page
 *
 * View and interact with a single AI session.
 */
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Terminal from "../../components/Terminal.astro";
import RelativeTime from "../../components/RelativeTime.astro";

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/sessions');
}

// Check authentication
let currentUser = null;
const sessionCookie = Astro.cookies.get('session');

if (!sessionCookie) {
  return Astro.redirect('/login');
}

try {
  const response = await fetch(`${Astro.url.origin}/api/auth/me`, {
    headers: {
      Cookie: `session=${sessionCookie.value}`,
    },
  });

  if (response.ok) {
    const data = await response.json();
    currentUser = data.user;
  } else {
    return Astro.redirect('/login');
  }
} catch (error) {
  console.error('Failed to fetch current user:', error);
  return Astro.redirect('/login');
}

// Fetch session from API
let session: any = null;
let error: string | null = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/sessions/${id}`, {
    headers: {
      Cookie: `session=${sessionCookie.value}`,
    },
  });

  if (response.ok) {
    const data = await response.json();
    session = data.session;
  } else if (response.status === 404) {
    return Astro.redirect('/sessions');
  } else {
    error = 'Failed to fetch session';
  }
} catch (e) {
  error = e instanceof Error ? e.message : 'Failed to load session';
}
---

<Layout title={`${session?.title || 'Session'} - plue`}>
  <Header />

  <div class="breadcrumb">
    <a href="/sessions">Sessions</a>
    <span class="sep">/</span>
    <span class="current">{session?.title || id}</span>
  </div>

  {error ? (
    <div class="container">
      <div class="error-state">
        <p>{error}</p>
      </div>
    </div>
  ) : (
    <div class="session-layout">
      <aside class="session-sidebar">
        <div class="sidebar-section">
          <h3>Session Info</h3>
          <div class="info-item">
            <span class="label">Title</span>
            <span class="value" id="session-title">{session.title || 'Untitled'}</span>
          </div>
          <div class="info-item">
            <span class="label">Directory</span>
            <span class="value directory" title={session.directory}>{session.directory}</span>
          </div>
          <div class="info-item">
            <span class="label">Model</span>
            <span class="value">{session.model || 'Default'}</span>
          </div>
          <div class="info-item">
            <span class="label">Created</span>
            <span class="value"><RelativeTime date={session.createdAt} /></span>
          </div>
          {session.archived && (
            <div class="info-item">
              <span class="archived-notice">This session is archived</span>
            </div>
          )}
        </div>

        <div class="sidebar-section">
          <h3>Actions</h3>
          <div class="action-buttons">
            <button class="btn btn-sm" data-action="edit-title">
              Rename
            </button>
            <button class="btn btn-sm" data-action="fork">
              Fork
            </button>
            {!session.archived ? (
              <button class="btn btn-sm" data-action="archive">
                Archive
              </button>
            ) : (
              <button class="btn btn-sm" data-action="unarchive">
                Unarchive
              </button>
            )}
            <button class="btn btn-sm btn-danger" data-action="delete">
              Delete
            </button>
          </div>
        </div>

        <div class="sidebar-section">
          <h3>Advanced</h3>
          <div class="action-buttons">
            <button class="btn btn-sm" data-action="undo">
              Undo Last Turn
            </button>
            <button class="btn btn-sm btn-danger" data-action="abort">
              Abort Task
            </button>
          </div>
        </div>

        <div class="sidebar-section">
          <h3>Changes</h3>
          <div class="changes-list" id="changes-list">
            <p class="loading">Loading changes...</p>
          </div>
        </div>
      </aside>

      <main class="session-main">
        <div class="chat-container" id="chat-container">
          <div class="chat-messages" id="chat-messages">
            <div class="welcome-message">
              <p>Start a conversation with Claude. Type your message below.</p>
            </div>
          </div>

          <div class="chat-input-container">
            <form id="chat-form">
              <textarea
                id="chat-input"
                placeholder="Type your message..."
                rows="3"
                disabled={session.archived}
              ></textarea>
              <div class="input-actions">
                <button type="submit" class="btn btn-primary" disabled={session.archived}>
                  Send
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>
  )}

  <!-- Rename Modal -->
  <div class="modal" id="rename-modal" style="display: none;">
    <div class="modal-backdrop" data-close-modal></div>
    <div class="modal-content">
      <div class="modal-header">
        <h2>Rename Session</h2>
        <button class="modal-close" data-close-modal>&times;</button>
      </div>
      <form id="rename-form">
        <div class="form-group">
          <label for="new-title">New Title</label>
          <input type="text" id="new-title" name="title" required />
        </div>
        <div class="modal-actions">
          <button type="button" class="btn" data-close-modal>Cancel</button>
          <button type="submit" class="btn btn-primary">Rename</button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<style>
