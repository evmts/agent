---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";

const { token } = Astro.params;

if (!token) {
  return Astro.redirect('/password/reset');
}
---

<Layout title="Set New Password - plue">
  <Header currentPath="/password/reset" />
  <div class="container">
    <div class="auth-container">
      <h1>Set New Password</h1>

      <form id="reset-confirm-form" class="auth-form">
        <input type="hidden" name="token" value={token} />

        <div class="form-group">
          <label for="password">New Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            minlength="8"
            autocomplete="new-password"
          />
          <small>At least 8 characters with uppercase, lowercase, and digit</small>
          <div id="password-feedback" class="validation-feedback"></div>
        </div>

        <div id="error" class="error-message" style="display: none;"></div>
        <div id="success" class="success-message" style="display: none;"></div>

        <button type="submit" class="btn btn-primary btn-block" id="submit-btn">
          Reset Password
        </button>
      </form>

      <div class="auth-links">
        <a href="/login">Back to sign in</a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .auth-container {
    max-width: 400px;
    margin: 4rem auto;
    padding: 2rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    background: var(--gray-950);
  }

  .auth-form {
    margin-top: 2rem;
  }

  .form-group small {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.875rem;
    color: var(--gray-400);
  }

  .validation-feedback {
    margin-top: 0.5rem;
    padding: 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    display: none;
  }

  .validation-feedback.valid {
    color: var(--success);
    background: var(--success-dim);
    display: block;
  }

  .validation-feedback.invalid {
    color: var(--error);
    background: var(--error-dim);
    display: block;
  }

  .error-message {
    padding: 0.75rem;
    margin-bottom: 1rem;
    background: var(--error-dim);
    border: 1px solid var(--error);
    border-radius: var(--radius);
    color: var(--error);
  }

  .success-message {
    padding: 0.75rem;
    margin-bottom: 1rem;
    background: var(--success-dim);
    border: 1px solid var(--success);
    border-radius: var(--radius);
    color: var(--success);
  }

  .btn-block {
    width: 100%;
  }

  .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .auth-links {
    margin-top: 2rem;
    text-align: center;
  }

  .auth-links a {
    color: var(--gray-300);
    text-decoration: underline;
  }

  .auth-links a:hover {
    color: var(--fg);
  }
</style>

<script>
  import { resetPassword } from '../../../lib/client-auth';

  const form = document.getElementById('reset-confirm-form') as HTMLFormElement;
  const errorDiv = document.getElementById('error') as HTMLDivElement;
  const successDiv = document.getElementById('success') as HTMLDivElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const passwordInput = document.getElementById('password') as HTMLInputElement;
  const passwordFeedback = document.getElementById('password-feedback') as HTMLDivElement;

  function validatePassword(password: string) {
    const errors: string[] = [];

    if (password.length < 8) {
      errors.push('at least 8 characters');
    }
    if (!/[a-z]/.test(password)) {
      errors.push('one lowercase letter');
    }
    if (!/[A-Z]/.test(password)) {
      errors.push('one uppercase letter');
    }
    if (!/[0-9]/.test(password)) {
      errors.push('one digit');
    }

    if (errors.length > 0) {
      return { valid: false, message: `Password needs: ${errors.join(', ')}` };
    }

    return { valid: true, message: 'Password meets requirements âœ“' };
  }

  function showValidationFeedback(element: HTMLDivElement, validation: { valid: boolean; message: string }) {
    element.textContent = validation.message;
    element.className = `validation-feedback ${validation.valid ? 'valid' : 'invalid'}`;
  }

  passwordInput.addEventListener('input', () => {
    const validation = validatePassword(passwordInput.value);
    showValidationFeedback(passwordFeedback, validation);
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    errorDiv.style.display = 'none';
    successDiv.style.display = 'none';

    const passwordValidation = validatePassword(passwordInput.value);
    showValidationFeedback(passwordFeedback, passwordValidation);

    if (!passwordValidation.valid) {
      errorDiv.textContent = 'Please fix the password requirements above';
      errorDiv.style.display = 'block';
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Resetting...';

    const formData = new FormData(form);
    const data = {
      token: formData.get('token') as string,
      password: formData.get('password') as string,
    };

    try {
      const result = await resetPassword(data.token, data.password);
      successDiv.textContent = result.message + ' Redirecting...';
      successDiv.style.display = 'block';

      setTimeout(() => {
        window.location.href = '/login';
      }, 2000);
    } catch (error) {
      let errorMessage = 'Failed to reset password';
      
      if (error instanceof Error) {
        errorMessage = error.message;
      }
      
      errorDiv.textContent = errorMessage;
      errorDiv.style.display = 'block';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Reset Password';
    }
  });
</script>