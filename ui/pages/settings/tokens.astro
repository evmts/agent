<script>
  // Get CSRF token from cookie
  function getCsrfToken(): string | null {
    const cookies = document.cookie.split(';');
    for (const cookie of cookies) {
      const [name, value] = cookie.trim().split('=');
      if (name === 'csrf_token') {
        return value;
      }
    }
    return null;
  }

  // Helper to add CSRF token to fetch options
  function withCsrfToken(options: RequestInit = {}): RequestInit {
    const token = getCsrfToken();
    if (token) {
      return {
        ...options,
        headers: {
          ...options.headers,
          'X-CSRF-Token': token,
        },
      };
    }
    return options;
  }

  const tokenForm = document.getElementById('token-form') as HTMLFormElement;
  const tokenErrorDiv = document.getElementById('token-error') as HTMLDivElement;
  const generateTokenBtn = document.getElementById('generate-token-submit') as HTMLButtonElement;
  const tokenModal = document.getElementById('token-modal') as HTMLDivElement;
  const tokenValueCode = document.getElementById('token-value') as HTMLElement;
  const copyTokenBtn = document.getElementById('copy-token-btn') as HTMLButtonElement;
  const closeModalBtn = document.getElementById('close-modal-btn') as HTMLButtonElement;

  // Generate token form handler
  tokenForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    tokenErrorDiv.style.display = 'none';
    generateTokenBtn.disabled = true;
    generateTokenBtn.textContent = 'Generating...';

    const name = (document.getElementById('token-name') as HTMLInputElement).value.trim();
    const scopeCheckboxes = document.querySelectorAll('input[name="scope"]:checked') as NodeListOf<HTMLInputElement>;
    const scopes = Array.from(scopeCheckboxes).map(cb => cb.value);

    if (scopes.length === 0) {
      tokenErrorDiv.textContent = 'Please select at least one scope';
      tokenErrorDiv.style.display = 'block';
      generateTokenBtn.disabled = false;
      generateTokenBtn.textContent = 'Generate Token';
      return;
    }

    try {
      const res = await fetch('/api/user/tokens', withCsrfToken({
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, scopes }),
        credentials: 'include',
      }));

      const data = await res.json();

      if (!res.ok) {
        throw new Error(data.error || 'Failed to generate token');
      }

      // Show the token in modal
      tokenValueCode.textContent = data.fullToken;
      tokenModal.style.display = 'flex';

      // Reset form
      tokenForm.reset();
    } catch (error) {
      tokenErrorDiv.textContent = error instanceof Error ? error.message : 'Failed to generate token';
      tokenErrorDiv.style.display = 'block';
    } finally {
      generateTokenBtn.disabled = false;
      generateTokenBtn.textContent = 'Generate Token';
    }
  });

  // Copy token to clipboard
  copyTokenBtn.addEventListener('click', async () => {
    const token = tokenValueCode.textContent || '';

    try {
      await navigator.clipboard.writeText(token);
      copyTokenBtn.textContent = 'Copied!';

      setTimeout(() => {
        copyTokenBtn.textContent = 'Copy';
      }, 2000);
    } catch (error) {
      console.error('Failed to copy token:', error);
      window.toast.error('Failed to copy token to clipboard');
    }
  });

  // Close modal and reload page
  closeModalBtn.addEventListener('click', () => {
    tokenModal.style.display = 'none';
    window.location.reload();
  });

  // Revoke token handler
  const revokeTokenBtns = document.querySelectorAll('.revoke-token-btn');

  revokeTokenBtns.forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      const target = e.target as HTMLButtonElement;
      const tokenId = target.dataset.tokenId;
      const tokenName = target.dataset.tokenName;

      if (!tokenId) return;

      if (!confirm(`Are you sure you want to revoke the token "${tokenName}"? This cannot be undone and will immediately invalidate the token.`)) {
        return;
      }

      target.disabled = true;
      target.textContent = 'Revoking...';

      try {
        const res = await fetch(`/api/user/tokens/${tokenId}`, withCsrfToken({
          method: 'DELETE',
          credentials: 'include',
        }));

        if (!res.ok) {
          const data = await res.json();
          throw new Error(data.error || 'Failed to revoke token');
        }

        // Remove the token item from the DOM
        const tokenItem = target.closest('.token-item');
        if (tokenItem) {
          tokenItem.remove();
        }

        // Check if there are no more tokens and show empty state
        const tokensList = document.querySelector('.tokens-list');
        if (tokensList && tokensList.children.length === 0) {
          window.location.reload();
        }
      } catch (error) {
        window.toast.error(error instanceof Error ? error.message : 'Failed to revoke token');
        target.disabled = false;
        target.textContent = 'Revoke';
      }
    });
  });
</script>
