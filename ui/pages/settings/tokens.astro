    flex-direction: column;
    gap: 12px;
    margin-top: 8px;
    padding: 12px;
    background: var(--gray-950);
    border: 1px solid var(--border);
    border-radius: var(--radius);
  }

  .checkbox-label {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 12px;
    align-items: start;
    cursor: pointer;
    padding: 8px;
    border-radius: var(--radius-sm);
    transition: background var(--transition-fast);
