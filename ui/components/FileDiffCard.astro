---
/**
 * FileDiffCard - Display a single file's diff with expand/collapse
 * Shows the filename, stats, and diff hunks with line numbers
 * Supports inline comments when landingId and comments are provided
 */
import type { FileDiff, LineComment } from "../lib/jj-types";
import LineComment from "./LineComment.astro";

interface Props {
  file: FileDiff;
  defaultExpanded?: boolean;
  landingId?: number;
  comments?: LineComment[];
  canComment?: boolean;
}

const { file, defaultExpanded = false, landingId, comments = [], canComment = false } = Astro.props;

// Group comments by line and side
const commentsByLine = new Map<string, LineComment[]>();
if (landingId) {
  comments.forEach(comment => {
    if (comment.filePath === file.path) {
      const key = `${comment.lineNumber}:${comment.side}`;
      if (!commentsByLine.has(key)) {
        commentsByLine.set(key, []);
      }
      commentsByLine.get(key)!.push(comment);
    }
  });
}

function getStatusLabel(status: string): string {
  switch (status) {
    case 'added': return 'A';
    case 'deleted': return 'D';
    case 'modified': return 'M';
    case 'renamed': return 'R';
    default: return 'M';
  }
}

function getStatusClass(status: string): string {
  return `status-${status}`;
}

// Parse diff lines with proper line numbers
function parseDiffLines(content: string, oldStart: number, newStart: number) {
  const lines = content.split('\n');
  const result: Array<{
    oldLineNum: number | null;
    newLineNum: number | null;
    type: 'add' | 'delete' | 'context' | 'header';
    content: string;
  }> = [];

  let oldLine = oldStart;
  let newLine = newStart;

  for (const line of lines) {
    if (line.startsWith('@@')) {
      result.push({ oldLineNum: null, newLineNum: null, type: 'header', content: line });
    } else if (line.startsWith('+')) {
      result.push({ oldLineNum: null, newLineNum: newLine++, type: 'add', content: line });
    } else if (line.startsWith('-')) {
      result.push({ oldLineNum: oldLine++, newLineNum: null, type: 'delete', content: line });
    } else {
      result.push({ oldLineNum: oldLine++, newLineNum: newLine++, type: 'context', content: line });
    }
  }

  return result;
}
---

<details class="file-diff-card" open={defaultExpanded}>
  <summary class="file-header">
    <div class="file-info">
      <span class={`file-status ${getStatusClass(file.status)}`}>
        {getStatusLabel(file.status)}
      </span>
      <span class="file-path">{file.path}</span>
      {file.oldPath && file.oldPath !== file.path && (
        <span class="old-path">← {file.oldPath}</span>
      )}
    </div>
    <div class="file-stats">
      {file.additions > 0 && (
        <span class="additions">+{file.additions}</span>
      )}
      {file.deletions > 0 && (
        <span class="deletions">-{file.deletions}</span>
      )}
    </div>
  </summary>

  <div class="diff-content">
    {file.isBinary ? (
      <div class="binary-notice">Binary file changed</div>
    ) : file.hunks.length === 0 ? (
      <div class="empty-notice">No changes to display</div>
    ) : (
      file.hunks.map(hunk => {
        const lines = parseDiffLines(hunk.content, hunk.oldStart, hunk.newStart);
        return (
          <div class="diff-hunk">
            {lines.map(line => {
              const oldComments = line.oldLineNum ? commentsByLine.get(`${line.oldLineNum}:old`) || [] : [];
              const newComments = line.newLineNum ? commentsByLine.get(`${line.newLineNum}:new`) || [] : [];

              return (
                <>
                  <div class={`diff-line diff-line-${line.type}`}>
                    <span
                      class={`line-num old-line-num ${canComment && line.oldLineNum ? 'commentable' : ''}`}
                      data-line-num={line.oldLineNum}
                      data-side="old"
                      data-file-path={file.path}
                      data-landing-id={landingId}
                    >
                      {canComment && line.oldLineNum && (
                        <button class="add-comment-btn" data-action="add-comment">+</button>
                      )}
                      {line.oldLineNum !== null ? line.oldLineNum : ''}
                    </span>
                    <span
                      class={`line-num new-line-num ${canComment && line.newLineNum ? 'commentable' : ''}`}
                      data-line-num={line.newLineNum}
                      data-side="new"
                      data-file-path={file.path}
                      data-landing-id={landingId}
                    >
                      {canComment && line.newLineNum && (
                        <button class="add-comment-btn" data-action="add-comment">+</button>
                      )}
                      {line.newLineNum !== null ? line.newLineNum : ''}
                    </span>
                    <span class="line-content">{line.content}</span>
                  </div>
                  {/* Show comments for old side */}
                  {oldComments.length > 0 && (
                    <div class="comment-row">
                      <div class="comments-container">
                        {oldComments.map(comment => (
                          <LineComment comment={comment} canEdit={canComment} />
                        ))}
                      </div>
                    </div>
                  )}
                  {/* Show comments for new side */}
                  {newComments.length > 0 && (
                    <div class="comment-row">
                      <div class="comments-container">
                        {newComments.map(comment => (
                          <LineComment comment={comment} canEdit={canComment} />
                        ))}
                      </div>
                    </div>
                  )}
                </>
              );
            })}
          </div>
        );
      })
    )}
  </div>
</details>

<!-- Comment form template (hidden by default) -->
{landingId && canComment && (
  <div id="comment-form-template" style="display: none;">
    <div class="comment-form">
      <textarea placeholder="Add a comment..." rows="3"></textarea>
      <div class="comment-form-actions">
        <button class="btn-small" data-action="submit-comment">Add comment</button>
        <button class="btn-small" data-action="cancel-comment">Cancel</button>
      </div>
    </div>
  </div>
)}

<style>
  .file-diff-card {
    border: 1px solid var(--border);
    margin-bottom: 1rem;
  }

  .file-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: #f9fafb;
    cursor: pointer;
    user-select: none;
    border-bottom: 1px solid var(--border);
  }

  .file-header:hover {
    background: #f3f4f6;
  }

  .file-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
  }

  .file-status {
    font-family: var(--font-mono);
    font-size: 12px;
    font-weight: bold;
    width: 20px;
    text-align: center;
    flex-shrink: 0;
  }

  .status-added { color: #16a34a; }
  .status-deleted { color: #dc2626; }
  .status-modified { color: #ca8a04; }
  .status-renamed { color: #7c3aed; }

  .file-path {
    font-family: var(--font-mono);
    font-size: 14px;
    font-weight: 500;
  }

  .old-path {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--text-muted);
  }

  .file-stats {
    font-family: var(--font-mono);
    font-size: 12px;
    display: flex;
    gap: 0.5rem;
  }

  .additions {
    color: #16a34a;
    font-weight: 500;
  }

  .deletions {
    color: #dc2626;
    font-weight: 500;
  }

  .diff-content {
    background: #ffffff;
  }

  .binary-notice,
  .empty-notice {
    padding: 2rem;
    text-align: center;
    color: var(--text-muted);
    font-style: italic;
  }

  .diff-hunk {
    font-family: var(--font-mono);
    font-size: 13px;
    line-height: 1.5;
  }

  .diff-line {
    display: grid;
    grid-template-columns: 50px 50px 1fr;
    border-bottom: 1px solid #e5e7eb;
  }

  .diff-line:hover {
    background: #f9fafb;
  }

  .diff-line-add {
    background: #f0fdf4;
  }

  .diff-line-add:hover {
    background: #dcfce7;
  }

  .diff-line-delete {
    background: #fef2f2;
  }

  .diff-line-delete:hover {
    background: #fee2e2;
  }

  .diff-line-header {
    background: #f3f4f6;
    font-weight: 500;
  }

  .line-num {
    padding: 0.25rem 0.5rem;
    text-align: right;
    color: #9ca3af;
    border-right: 1px solid #e5e7eb;
    user-select: none;
    min-width: 50px;
  }

  .old-line-num {
    background: #fafafa;
  }

  .new-line-num {
    background: #fafafa;
  }

  .diff-line-add .new-line-num {
    background: #f0fdf4;
    color: #16a34a;
  }

  .diff-line-delete .old-line-num {
    background: #fef2f2;
    color: #dc2626;
  }

  .line-content {
    padding: 0.25rem 0.75rem;
    white-space: pre;
    overflow-x: auto;
  }

  .diff-line-add .line-content {
    color: #15803d;
  }

  .diff-line-delete .line-content {
    color: #b91c1c;
  }

  .diff-line-header .line-content {
    color: #6b7280;
  }

  /* Hide the default marker */
  details > summary {
    list-style: none;
  }

  details > summary::-webkit-details-marker {
    display: none;
  }

  /* Add custom expand/collapse indicator */
  .file-header::before {
    content: '▶';
    display: inline-block;
    width: 1rem;
    margin-right: 0.5rem;
    transition: transform 0.2s;
    font-size: 10px;
  }

  details[open] > .file-header::before {
    transform: rotate(90deg);
  }

  /* Comment support styles */
  .line-num.commentable {
    position: relative;
  }

  .line-num.commentable:hover .add-comment-btn {
    opacity: 1;
  }

  .add-comment-btn {
    position: absolute;
    left: 2px;
    top: 50%;
    transform: translateY(-50%);
    width: 18px;
    height: 18px;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    font-size: 12px;
    line-height: 1;
    opacity: 0;
    transition: opacity 0.2s;
    padding: 0;
  }

  .add-comment-btn:hover {
    background: #2563eb;
  }

  .comment-row {
    background: #fefce8;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .comments-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .comment-form {
    background: white;
    border: 1px solid var(--border);
    padding: 0.75rem;
    margin: 0.5rem 0;
  }

  .comment-form textarea {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid var(--border);
    font-family: inherit;
    font-size: 13px;
    resize: vertical;
  }

  .comment-form-actions {
    margin-top: 0.5rem;
    display: flex;
    gap: 0.5rem;
  }

  .btn-small {
    padding: 0.25rem 0.5rem;
    font-size: 12px;
    border: 1px solid var(--border);
    background: white;
    cursor: pointer;
  }

  .btn-small:hover {
    background: #f3f4f6;
  }
</style>

<script>
  // Handle add comment button clicks
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;

    if (target.getAttribute('data-action') === 'add-comment') {
      const cell = target.closest('.line-num');
      if (!cell) return;

      const lineNum = cell.getAttribute('data-line-num');
      const side = cell.getAttribute('data-side');
      const filePath = cell.getAttribute('data-file-path');
      const landingId = cell.getAttribute('data-landing-id');

      if (!lineNum || !side || !filePath || !landingId) return;

      // Clone and show comment form
      const template = document.getElementById('comment-form-template');
      if (!template) return;

      const form = template.cloneNode(true) as HTMLElement;
      form.style.display = 'block';
      form.removeAttribute('id');

      // Store context on form
      form.setAttribute('data-line-num', lineNum);
      form.setAttribute('data-side', side);
      form.setAttribute('data-file-path', filePath);
      form.setAttribute('data-landing-id', landingId);

      // Insert form after the current line
      const diffLine = cell.closest('.diff-line');
      if (!diffLine) return;

      const commentRow = document.createElement('div');
      commentRow.className = 'comment-row';
      commentRow.appendChild(form);

      diffLine.after(commentRow);

      // Focus textarea
      const textarea = form.querySelector('textarea');
      if (textarea) (textarea as HTMLTextAreaElement).focus();
    }

    if (target.getAttribute('data-action') === 'submit-comment') {
      const form = target.closest('.comment-form');
      if (!form) return;

      const textarea = form.querySelector('textarea') as HTMLTextAreaElement;
      if (!textarea || !textarea.value.trim()) return;

      const lineNum = form.getAttribute('data-line-num');
      const side = form.getAttribute('data-side');
      const filePath = form.getAttribute('data-file-path');
      const landingId = form.getAttribute('data-landing-id');

      const pathParts = window.location.pathname.split('/');
      const username = pathParts[1];
      const reponame = pathParts[2];

      fetch(`/api/${username}/${reponame}/landing/${landingId}/comments`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          file_path: filePath,
          line_number: parseInt(lineNum!),
          side: side,
          body: textarea.value
        })
      }).then(response => {
        if (response.ok) {
          window.location.reload();
        } else {
          response.json().then(data => {
            window.toast.error(data.error || 'Failed to add comment');
          });
        }
      });
    }

    if (target.getAttribute('data-action') === 'cancel-comment') {
      const form = target.closest('.comment-form');
      if (form) {
        const row = form.closest('.comment-row');
        if (row) row.remove();
      }
    }

    if (target.getAttribute('data-action') === 'resolve' || target.getAttribute('data-action') === 'unresolve') {
      const commentDiv = target.closest('.line-comment');
      if (!commentDiv) return;

      const commentId = commentDiv.getAttribute('data-comment-id');
      const resolved = target.getAttribute('data-action') === 'resolve';

      const pathParts = window.location.pathname.split('/');
      const username = pathParts[1];
      const reponame = pathParts[2];
      const landingId = pathParts[4];

      fetch(`/api/${username}/${reponame}/landing/${landingId}/comments/${commentId}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ resolved })
      }).then(response => {
        if (response.ok) {
          window.location.reload();
        } else {
          response.json().then(data => {
            window.toast.error(data.error || 'Failed to update comment');
          });
        }
      });
    }

    if (target.getAttribute('data-action') === 'delete') {
      if (!confirm('Delete this comment?')) return;

      const commentDiv = target.closest('.line-comment');
      if (!commentDiv) return;

      const commentId = commentDiv.getAttribute('data-comment-id');
      const pathParts = window.location.pathname.split('/');
      const username = pathParts[1];
      const reponame = pathParts[2];
      const landingId = pathParts[4];

      fetch(`/api/${username}/${reponame}/landing/${landingId}/comments/${commentId}`, {
        method: 'DELETE'
      }).then(response => {
        if (response.ok) {
          window.location.reload();
        } else {
          response.json().then(data => {
            window.toast.error(data.error || 'Failed to delete comment');
          });
        }
      });
    }
  });
</script>
