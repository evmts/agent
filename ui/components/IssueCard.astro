---
import type { Issue } from "../lib/types";
import Avatar from "./Avatar.astro";
import RelativeTime from "./RelativeTime.astro";
import { getDueDateStatus } from "../lib/date-utils";

interface Props {
  issue: Issue & {
    assignees?: string[];
    labels?: string[];
    due_date?: string | null;
    reactions?: Array<{ emoji: string; count: number }>;
    is_pinned?: boolean;
  };
  user: string;
  repo: string;
  availableLabels?: Array<{ name: string; color: string; description?: string }>;
}

const { issue, user, repo, availableLabels = [] } = Astro.props;
const issueUrl = `/${user}/${repo}/issues/${issue.issue_number}`;

// Get label details from available labels
const labels = (issue.labels || [])
  .map(labelName => availableLabels.find(l => l.name === labelName))
  .filter(Boolean) as Array<{ name: string; color: string }>;

const hasReactions = issue.reactions && issue.reactions.length > 0;

// Get due date status
const dueDate = issue.due_date || null;
const dueDateStatus = getDueDateStatus(dueDate);
---

<a href={issueUrl} class="issue-item">
  <Avatar user={{ username: issue.author_username || 'unknown' }} size="sm" />
  <span class:list={["issue-state", issue.state]}>{issue.state}</span>
  <div class="issue-content">
    <div class="issue-title-row">
      {issue.is_pinned && <span class="pin-icon" title="Pinned"></span>}
      <span class="issue-title">{issue.title}</span>
      {labels.length > 0 && (
        <div class="issue-labels">
          {labels.map(label => (
            <span class="label-badge" style={`background-color: ${label.color};`}>
              {label.name}
            </span>
          ))}
        </div>
      )}
    </div>
    <div class="issue-meta">
      #{issue.issue_number} 路 {issue.author_username} 路 <RelativeTime date={issue.created_at} />
      {dueDateStatus && (
        <span class:list={["issue-due-date", dueDateStatus.colorClass]}>
          路  {dueDateStatus.relativeText}
        </span>
      )}
      {issue.assignees && issue.assignees.length > 0 && (
        <span class="issue-assignees">
          路 assigned to {issue.assignees.slice(0, 3).join(", ")}
          {issue.assignees.length > 3 && ` +${issue.assignees.length - 3}`}
        </span>
      )}
      {hasReactions && (
        <span class="issue-reactions">
          {issue.reactions!.map((r) => (
            <span class="reaction-summary">
              {r.emoji} {r.count}
            </span>
          ))}
        </span>
      )}
    </div>
  </div>
  {issue.assignees && issue.assignees.length > 0 && (
    <div class="assignee-avatars">
      {issue.assignees.slice(0, 3).map(assignee => (
        <Avatar user={{ username: assignee }} size="xs" />
      ))}
      {issue.assignees.length > 3 && (
        <span class="more-assignees">+{issue.assignees.length - 3}</span>
      )}
    </div>
  )}
</a>

<style>
  .issue-title-row {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .pin-icon {
    font-size: 14px;
    line-height: 1;
    opacity: 0.7;
  }

  .issue-labels {
    display: flex;
    gap: 4px;
    flex-wrap: wrap;
  }

  .label-badge {
    display: inline-block;
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 11px;
    font-weight: 600;
    color: #fff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .assignee-avatars {
    display: flex;
    align-items: center;
    gap: 4px;
    margin-left: auto;
  }

  .more-assignees {
    font-size: 11px;
    color: var(--gray-400);
    padding-left: 4px;
  }

  .issue-assignees {
    color: var(--gray-400);
  }

  .issue-reactions {
    display: inline-flex;
    gap: 8px;
    margin-left: 8px;
  }

  .reaction-summary {
    display: inline-flex;
    align-items: center;
    gap: 2px;
    font-size: 12px;
    color: var(--gray-400);
  }

  /* Due Date */
  .issue-due-date {
    font-size: 12px;
    font-weight: 500;
  }

  .issue-due-date.due-future {
    color: var(--gray-400);
  }

  .issue-due-date.due-soon {
    color: #f59e0b;
  }

  .issue-due-date.due-overdue {
    color: #ef4444;
  }
</style>
