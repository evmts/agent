---
import type { Repository } from "../lib/types";
import TopicBadge from "./TopicBadge.astro";
import Avatar from "./Avatar.astro";

interface Props {
  repo: Repository;
  showUser?: boolean;
  starCount?: number;
}

const { repo, showUser = true, starCount } = Astro.props;
const repoUrl = `/${repo.username}/${repo.name}`;
---

<li class="repo-item">
  <a href={repoUrl}>
    <div class="repo-header">
      <div class="repo-title">
        {showUser && repo.username && (
          <Avatar user={{ username: repo.username }} size="sm" />
        )}
        <h3>
          {showUser && <span class="owner">{repo.username} / </span>}
          {repo.name}
        </h3>
      </div>
      {starCount !== undefined && starCount > 0 && (
        <span class="star-count">
          â˜… {starCount}
        </span>
      )}
    </div>
    {repo.description && <p class="description">{repo.description}</p>}
    {repo.topics && repo.topics.length > 0 && (
      <div class="topics">
        {repo.topics.map((topic) => (
          <TopicBadge topic={topic} />
        ))}
      </div>
    )}
  </a>
</li>

<style>
  .repo-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .repo-title {
    display: flex;
    align-items: center;
    gap: 10px;
    min-width: 0;
    flex: 1;
  }

  .star-count {
    font-size: 12px;
    color: var(--text-secondary);
    white-space: nowrap;
  }

  h3 {
    margin: 0;
    min-width: 0;
  }

  .description {
    margin-bottom: 8px;
  }
  .topics {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 8px;
  }
</style>
