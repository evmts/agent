# Plue Server Configuration

# HTTP Server
HOST=0.0.0.0
PORT=4000

# Database
DATABASE_URL=postgres://plue:password@localhost:5432/plue

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production

# Environment
NODE_ENV=development

# SSH Server (for Git operations)
SSH_ENABLED=false
SSH_HOST=0.0.0.0
SSH_PORT=2222

# Repositories
PLUE_REPOS_DIR=repos

# Logging
PLUE_LOG_DIR=logs

# mTLS Origin Protection
# When enabled, server requires client certs signed by the CA at PLUE_MTLS_CA_PATH
# This ensures only Cloudflare can connect to the origin
PLUE_MTLS_ENABLED=false
PLUE_MTLS_CA_PATH=/etc/plue/mtls/ca.crt
