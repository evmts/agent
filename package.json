{
  "name": "plue",
  "version": "1.0.0",
  "description": "Plue - Collaborative Development Platform",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "start": "astro dev",
    "check": "astro check",
    "lint": "eslint . --ext .js,.ts,.astro --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "type-check": "astro check && tsc --noEmit",
    "db:migrate": "node -e \"console.log('Database migration placeholder')\"",
    "postinstall": "astro sync"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/node": "^9.5.1",
    "@astrojs/tailwind": "^6.0.2",
    "@hono/node-server": "^1.19.7",
    "@hono/zod-validator": "^0.7.6",
    "@node-rs/argon2": "^2.0.2",
    "astro": "^5.16.6",
    "ghostty-web": "^0.4.0",
    "hono": "^4.11.1",
    "postgres": "^3.4.7",
    "resend": "^6.6.0",
    "tailwindcss": "3.4.19",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
