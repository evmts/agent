{
  "name": "plue",
  "version": "1.0.0",
  "description": "Plue - Collaborative Development Platform",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check --minimumFailingSeverity error && astro build",
    "preview": "astro preview",
    "start": "astro dev",
    "check": "astro check --minimumFailingSeverity error",
    "lint": "eslint . --max-warnings 0 --fix",
    "lint:check": "eslint . --max-warnings 0",
    "type-check": "astro check --minimumFailingSeverity error && tsc --noEmit",
    "db:migrate": "node -e \"console.log('Database migration placeholder')\"",
    "postinstall": "astro sync",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:seed": "bun e2e/seed.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@astrojs/node": "9.5.1",
    "@astrojs/tailwind": "6.0.2",
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.2.2",
    "@node-rs/argon2": "^1.8.3",
    "@toast-ui/editor": "^3.2.2",
    "@vite-pwa/astro": "^1.2.0",
    "ai": "^4.0.0",
    "astro": "5.16.6",
    "ghostty-web": "^0.1.0",
    "hono": "^4.6.3",
    "jose": "^5.9.0",
    "postgres": "^3.4.0",
    "resend": "^4.0.0",
    "tailwindcss": "3.4.19",
    "typescript": "^5.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@astrojs/check": "^0.9.6",
    "@types/bun": "^1.3.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "astro-eslint-parser": "^0.16.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.29.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}