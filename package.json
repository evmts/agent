{
  "name": "plue",
  "version": "1.0.0",
  "description": "Plue - Collaborative Development Platform",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "start": "astro dev",
    "check": "astro check",
    "lint": "eslint . --ext .js,.ts,.astro --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "type-check": "astro check && tsc --noEmit",
    "db:migrate": "node -e \"console.log('Database migration placeholder')\"",
    "postinstall": "astro sync"
  },
  "dependencies": {
    "@astrojs/node": "^8.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@hono/zod-validator": "^0.2.2",
    "@node-rs/argon2": "^1.8.3",
    "@types/postgres": "^3.0.0",
    "astro": "^4.15.0",
    "hono": "^4.6.3",
    "postgres": "^3.4.0",
    "resend": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.29.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}